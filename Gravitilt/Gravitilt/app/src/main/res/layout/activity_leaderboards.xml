<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomer.gravitilt.LeaderboardsActivity">
    <TextView
        android:text="Loading..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/tvTitle"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:text="Name 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tvName1"
        android:layout_below="@+id/tvTitle"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="Time 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName1"
        android:id="@+id/tvTime1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="Name 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tvName2"
        android:layout_below="@+id/tvName1"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="Time 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName2"
        android:id="@+id/tvTime2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="Name 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tvName3"
        android:layout_below="@+id/tvName2"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="Time 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName3"
        android:id="@+id/tvTime3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="Name 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tvName4"
        android:layout_below="@+id/tvName3"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="Time 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName4"
        android:id="@+id/tvTime4"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="Name 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/tvName5"
        android:layout_below="@+id/tvName4"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />
    <TextView
        android:text="Time 5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName5"
        android:id="@+id/tvTime5"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:textSize="25sp"
        android:textColor="@android:color/black" />


</RelativeLayout>
