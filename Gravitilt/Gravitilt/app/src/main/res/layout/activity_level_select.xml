<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.tomer.gravitilt.LevelSelectActivity">

    <TextView
        android:text="Choose Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        />
    <Button
        android:text="Demo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn0"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rlLevels"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llRow1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <Button
                android:text="1"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/btn1"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <Button
                android:text="2"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/btn2"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <Button
                android:text="3"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/btn3"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <Button
                android:text="4"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/btn4"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <Button
                android:text="5"
                android:layout_width="75dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:id="@+id/btn5"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>


        </LinearLayout>

    </RelativeLayout>
    <Button
        android:text="Impossible Challenge"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:id="@+id/btn6"
        android:layout_below="@+id/rlLevels"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTip"
        android:text="Tip: Game too hard? try slowing down time in the Settings"
        android:layout_below="@id/btn6"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"/>

</RelativeLayout>
