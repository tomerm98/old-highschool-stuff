<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tomer.musicplayer.MainActivity">

    <TextView
        android:text='Try Sample "Music"'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        />

    <Button
        android:text="LEEEEEEEEEROY"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:id="@+id/btnLeeroy"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_width="170dp"
        android:onClick="onClickBtnLeeroy"/>

    <Button
        android:text="Inhuman Laugh"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLaugh"
        android:onClick="onClickBtnLaugh"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btnLeeroy" />

    <Button
        android:text="Infinite Ascending"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnShepard"
        android:onClick="onClickBtnShepard"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/btnLaugh"
        android:layout_alignStart="@+id/btnLaugh" />
</RelativeLayout>
